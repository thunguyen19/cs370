%body.bodie
  #login
    %h3.text-center.text-white.pt-5
    .container1
      #login-row.row.justify-content-center.align-items-center
        #login-column.col-md-6
          #login-box.col-md-12
            = form_tag admin_login_path, class: 'form', id: 'login-form' do
              %h3.text-center.text-info Admin Login
              .form-group
                %br/
                = label :password, "password", class: 'text-info'
                = password_field_tag :password,'', :placeholder => 'password', class: 'form-control', id:'password'
              = submit_tag 'Login', class: 'btn btn-info btn-md'

